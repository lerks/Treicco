<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:t="urn:import:treicco.client.ui.widgets">
	<ui:style type="treicco.client.MainViewImpl.DirectoryStyle">
		.TitlePanel {
			position: absolute;
			top: 0px;
			height: 100px;
			left: 0px;
			right: 0px;
		}
		
		.NavigationPanel {
			position: absolute;
			top: 100px;
			bottom: 27px;
			left: 0px;
			width: 250px;
		}
		
		.NavigationPanelFloat {
			top: 0px;
			bottom: 0px;
			left: 0px;
			width: 250px;
		}
		
		.ButtonPanel {
			position: fixed;
			height: 27px;
			bottom: 0px;
			left: 0px;
			width: 250px;
			background-color: #95B9DA;
		}
		
		.LeftButton {
			position: absolute;
			left: 10px;
			right: 130px;
			top: 3px;
			bottom: 3px;
		}
		
		.RightButton {
			position: absolute;
			left: 130px;
			right: 10px;
			top: 3px;
			bottom: 3px;
		}
		
		.MainPanel {
			position: relative;
			margin: 100px 0px 0px 250px;
			padding: 5px;
			background-color: #3D85C6;
		}
		
		.Child {
			position: relative;
			background-color: #ffffff;
		}
		
		.Parent {
			overflow: hidden;
			white-space: nowrap;
			height: 18px;
			margin-top: 5px;
			background-color: #95B9DA;
			padding-left: 10px;
			padding-top: 2px;
			cursor: pointer;
		}
		
		.Parent a,.Parent a:visited,.Parent a:hover {
			color: #FFFFFF;
			text-decoration: none;
		}
		
		.LastParent {
			background-color: #3D85C6;
		}
		
		.Directory {
			overflow: hidden;
			white-space: nowrap;
			height: 18px;
			margin-top: 5px;
			margin-right: 5px;
			background-color: #DADADA;
			padding-left: 10px;
			padding-top: 2px;
			cursor: pointer;
		}
		
		.Directory a,.Directory a:visited,.Directory a:hover {
			color: #000000;
			text-decoration: none;
		}
		
		.Task {
			overflow: hidden;
			white-space: nowrap;
			height: 18px;
			margin-top: 5px;
			margin-right: 5px;
			background-color: #EBEBEB;
			padding-left: 10px;
			padding-top: 2px;
			cursor: pointer;
		}
		
		.Task a,.Task a:visited,.Task a:hover {
			color: #000000;
			text-decoration: none;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class="{style.TitlePanel}">
			<g:Label>Task Repository for Informatics and Coding Competitions</g:Label>
		</div>

		<div class="{style.NavigationPanel}">
			<div class="{style.NavigationPanelFloat}" style="position:absolute;"
				ui:field="navigationPanel">
				<g:FlowPanel ui:field="parentsPanel">
					<g:Hyperlink addStyleNames="{style.Parent} {style.LastParent}"
						text="Home Page" targetHistoryToken="/"></g:Hyperlink>
				</g:FlowPanel>
				<g:FlowPanel ui:field="childrenPanel">
				</g:FlowPanel>
				<g:FlowPanel ui:field="tasksPanel">
				</g:FlowPanel>
			</div>
		</div>

		<div class="{style.ButtonPanel}">
			<t:Button width="110px" addStyleNames="{style.LeftButton}"
				ui:field="addDirectoryButton" text="Add Directory" />
			<t:Button width="110px" addStyleNames="{style.RightButton}"
				ui:field="addTaskButton" text="Add Task" />
		</div>

		<g:FlowPanel addStyleNames="{style.MainPanel}" ui:field="mainPanel">
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 