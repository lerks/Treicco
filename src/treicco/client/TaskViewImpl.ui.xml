<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.WhiteBackground {
			background-color: #FFFFFF;
		}
		
		.Title {
			font-size: 200%;
		}
		
		.TitleUnderline {
			width: 100%;
			height: 100%;
			margin: 0px;
			paffing: 0px;
			border-width: 0px;
			background-color: #aaaaaa;
		}
		
		.Update {
			text-align: right;
		}
		
		.Update:hover {
			text-decoration: underline;
			cursor: pointer;
		}
	</ui:style>
	<g:LayoutPanel addStyleNames="{style.WhiteBackground}">
		<g:layer top="20px" height="32px" left="20px" right="20px">
			<g:Label addStyleNames="{style.Title}">Titolo</g:Label>
		</g:layer>
		<g:layer height="16px" bottom="10px" width="200px" right="20px">
			<g:Anchor addStyleNames="{style.Update}" ui:field="edit">Edit</g:Anchor>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 