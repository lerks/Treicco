<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.Title {
			font-size: 200%;
		}
		
		.TitleUnderline {
			width: 100%;
			height: 100%;
			margin: 0px;
			paffing: 0px;
			border-width: 0px;
			background-color: #aaaaaa;
		}
		
		.Update {
			text-align: right;
		}
		
		.Update:hover {
			text-decoration: underline;
			cursor: pointer;
		}
	</ui:style>
	<g:HTMLPanel>
		<div style="position:relative; height:32px; padding: 20px 20px 4px;">
			<g:Label addStyleNames="{style.Title}" ui:field="fullName"></g:Label>
		</div>
		<div style="position:relative; height:2px; padding: 4px 20px;">
			<hr class="{style.TitleUnderline}"></hr>
		</div>
		<div style="position:relative; padding: 6px 20px;">
			<g:Label>Date: </g:Label>
			<g:Label ui:field="date"></g:Label>
			<g:Label>Location: </g:Label>
			<g:Label ui:field="location"></g:Label>
			<g:Label>Website: </g:Label>
			<g:Label ui:field="website"></g:Label>
		</div>
		<div
			style="position:absolute; top:10px; right:10px; height:20px; width:100px;">
			<g:Anchor addStyleNames="{style.Update}" ui:field="edit">Edit</g:Anchor>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 