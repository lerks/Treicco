<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:com.google.gwt.editor.ui.client">
	<ui:style>
		.WhiteBackground {
			background-color: #FFFFFF;
		}
		
		.Title {
			font-size: 200%;
		}
		
		.TitleUnderline {
			width: 100%;
			height: 100%;
			margin: 0px;
			paffing: 0px;
			border-width: 0px;
			background-color: #aaaaaa;
		}
		
		.Update {
			text-align: right;
		}
		
		.Update:hover {
			text-decoration: underline;
			cursor: pointer;
		}
		
		.Field {
			border: solid 2px #000000;
		}
		
		.Writable .Field {
			border-color: #ff9955;
		}
		
		.Readable .Field {
			border-color: #ffffff;
			cursor: default;
		}
	</ui:style>
	<g:LayoutPanel addStyleNames="{style.WhiteBackground}">
		<g:layer top="20px" height="32px" left="20px" right="240px">
			<e:ValueBoxEditorDecorator ui:field="fullName">
				<e:valuebox>
					<g:TextBox />
				</e:valuebox>
			</e:ValueBoxEditorDecorator>
		</g:layer>
		<g:layer top="20px" bottom="20px" width="200px" right="20px">
			<g:Image url="http://code.google.com/webtoolkit/logo-185x175.png"></g:Image>
		</g:layer>
		<g:layer top="55px" height="2px" left="20px" right="240px">
			<g:HTMLPanel>
				<hr class="{style.TitleUnderline}"></hr>
			</g:HTMLPanel>
		</g:layer>
		<g:layer top="66px" height="1000px" left="20px" right="240px">
			<g:FlowPanel>
				<g:Label>Short Name: </g:Label>
				<e:ValueBoxEditorDecorator ui:field="shortName">
					<e:valuebox>
						<g:TextBox />
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
				<g:Label>Location: </g:Label>
				<e:ValueBoxEditorDecorator ui:field="location">
					<e:valuebox>
						<g:TextBox />
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
				<e:ValueBoxEditorDecorator ui:field="website">
					<e:valuebox>
						<g:TextBox />
					</e:valuebox>
				</e:ValueBoxEditorDecorator>
				<g:Button ui:field="commit" text="Commit" />
				<g:Button ui:field="cancel" text="Cancel" />
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 