<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="treicco.client.MainViewImpl.DirectoryStyle">
		.BottomBar {
			background-color: #95B9DA;
			position: fixed;
		}
		
		.Button {
			padding-top: 1px;
		}
		
		.Parent {
			overflow: hidden;
			white-space: nowrap;
			height: 18px;
			margin-bottom: 5px;
			background-color: #95B9DA;
			padding-left: 10px;
			padding-top: 2px;
			cursor: pointer;
		}
		
		.Parent a,.Parent a:visited,.Parent a:hover {
			color: #FFFFFF;
			text-decoration: none;
		}
		
		.LastParent {
			background-color: #3D85C6;
		}
		
		.Child {
			overflow: hidden;
			white-space: nowrap;
			height: 18px;
			margin-bottom: 5px;
			margin-right: 5px;
			background-color: #DADADA;
			padding-left: 10px;
			padding-top: 2px;
			cursor: pointer;
		}
		
		.Child a,.Child a:visited,.Child a:hover {
			color: #000000;
			text-decoration: none;
		}
		
		.Task {
			overflow: hidden;
			white-space: nowrap;
			height: 18px;
			margin-bottom: 5px;
			margin-right: 5px;
			background-color: #EBEBEB;
			padding-left: 10px;
			padding-top: 2px;
			cursor: pointer;
		}
		
		.Task a,.Task a:visited,.Task a:hover {
			color: #000000;
			text-decoration: none;
		}
		
		.RootPanel {
			background-color: #3D85C6;
		}
		
		.MainPanel {
			background-color: #ffffff;
		}
	</ui:style>

	<g:DockLayoutPanel unit='PX'>
		<g:north size='100'>
			<g:Label>Task Repository for Informatics and Coding Competitions</g:Label>
		</g:north>
		<g:west size='250'>
			<g:LayoutPanel>
				<g:layer left='0px' right='0px' top='0px' bottom='29px'>
					<g:FlowPanel>
						<g:FlowPanel ui:field="parentsPanel">
							<g:Hyperlink addStyleNames="{style.Parent} {style.LastParent}"
								text="Home Page" targetHistoryToken="/"></g:Hyperlink>
						</g:FlowPanel>
						<g:FlowPanel ui:field="childrenPanel">

						</g:FlowPanel>
						<g:FlowPanel ui:field="tasksPanel">

						</g:FlowPanel>
					</g:FlowPanel>
				</g:layer>

				<g:layer left='0px' right='0px' bottom='0px' height='29px'>
					<g:LayoutPanel addStyleNames="{style.BottomBar}">
						<g:layer left='10px' right='130px' bottom='3px' top='4px'>
							<g:Button width="110px" addStyleNames="{style.Button}"
								ui:field="addDirectoryButton" text="Add Directory" />
						</g:layer>
						<g:layer left='130px' right='10px' bottom='3px' top='4px'>
							<g:Button width="110px" addStyleNames="{style.Button}"
								ui:field="addTaskButton" text="Add Task" />
						</g:layer>
					</g:LayoutPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:west>
		<g:center>
			<g:LayoutPanel addStyleNames="{style.RootPanel}" ui:field="mainPanel">
<!-- 				<g:layer left='5px' right='5px' bottom='5px' top='5px'>
					<g:SimplePanel addStyleNames="{style.MainPanel}"
						 />
				</g:layer> -->
			</g:LayoutPanel>
		</g:center>
	</g:DockLayoutPanel>


</ui:UiBinder> 